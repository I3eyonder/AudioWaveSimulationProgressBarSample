<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <com.hieupt.audiowavesimulationprogressbar.AudioWaveSimulationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:padding="5dp"
        app:audioWave_barBackgroundColor="backgroundAware"
        app:audioWave_barStrokeColor="@color/design_default_color_secondary"
        app:audioWave_barStrokeWidth="1dp"
        app:audioWave_maxBarHeight="100dp"
        app:audioWave_minBarHeight="20dp"
        app:audioWave_numOfBar="5"
        app:audioWave_numOfWave="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>